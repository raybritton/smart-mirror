<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/battery_container"
        android:layout_gravity="bottom|center_horizontal"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
        <ImageView
            android:id="@+id/battery_icon"
            tools:tint="@color/mirror_text_error"
            android:src="@drawable/ic_battery_charging"
            android:contentDescription="@null"
            android:padding="12dp"
            android:layout_width="48dp"
            android:layout_height="48dp"/>
        <TextView
            android:id="@+id/battery_text"
            style="@style/BatteryText"
            android:paddingRight="@dimen/normal_padding"
            android:gravity="center_vertical"
            tools:text="CRITICALLY LOW"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </LinearLayout>
</FrameLayout>