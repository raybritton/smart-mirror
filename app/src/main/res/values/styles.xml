<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="MirrorTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/mirror_background</item>
    </style>

    <style name="BatteryText" >
        <item name="android:textColor">@color/mirror_text_error</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SystemFailure" />
    <style name="SystemFailure.Icon" >
        <item name="android:tint">@color/mirror_text_error</item>
    </style>
    <style name="SystemFailure.Title" >
        <item name="android:textColor">@color/mirror_text_error</item>
        <item name="android:textSize">40sp</item>
    </style>
    <style name="SystemFailure.Message" >
        <item name="android:textColor">@color/mirror_text_error</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Mirror" />

    <style name="Mirror.Time">
        <item name="android:textSize">100sp</item>
        <item name="android:textColor">@color/mirror_text_primary</item>
    </style>

    <style name="Mirror.Date">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/mirror_text_secondary</item>
    </style>

    <style name="Weather" />

    <style name="Weather.SectionTitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/mirror_text_secondary</item>
    </style>

    <style name="Weather.Temperature">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/mirror_text_primary</item>
    </style>

    <style name="Weather.Summary">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/mirror_text_secondary</item>
    </style>

    <style name="Weather.Error">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/mirror_text_error</item>
    </style>

    <style name="Log" >
        <item name="android:textColor">@color/mirror_text_primary</item>
    </style>

    <style name="Log.Button" parent="TextAppearance.AppCompat.Widget.Button.Borderless.Colored">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Log.Date">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Log.Event" />

    <style name="Log.Event.Time">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Log.Event.Message">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Log.Event.Type">
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>
